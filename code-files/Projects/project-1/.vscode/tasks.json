    "version": "2.0.0",
    "tasks": [
      {
        "label": "STM32-Build (FULL)",
        "type": "shell",
        "command": "clear && echo \"\nFULL BUILD\" && make",
        "group": "build",
        "problemMatcher": []
      },
      {
        "label": "Build (Incremental)",
        "type": "shell",
        "command": "clear && echo \"\nINCREMENTAL BUILD\" &&make build",
        "group": "build",
        "problemMatcher": []
      },

